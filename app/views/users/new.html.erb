<% provide(:title, 'Rejestracja nowego użytkownika') %>
<h1>Rejestracja nowego użytkownika</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, {class: 'form-control', required: 'required'} %>

      <%= f.label :password, "Hasło" %>
      <%= f.password_field :password, {class: 'form-control', required: 'required'} %>

      <%= f.label :password_confirmation, "Powtórzenie hasła" %>
      <%= f.password_field :password_confirmation, {class: 'form-control', required: 'required'} %>

      <%= f.submit "Utwórz nowe konto", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>